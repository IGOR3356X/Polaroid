<Page x:Class="Polaroid.Pages.Admin_Main.AddItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Polaroid.Pages.Admin_Main"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="AddItem" Background="White">

    <Grid>
        <TextBox Name="TxbItemName" HorizontalAlignment="Left" Margin="480,219,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="404" Height="30" FontSize="16" FontFamily="Arial"/>
        <TextBox Name="TxbPrice" HorizontalAlignment="Left" Margin="480,287,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="404" Height="30" FontSize="16" FontFamily="Arial"/>
        <TextBox Name="TxbDiscription" HorizontalAlignment="Left" Margin="480,359,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="404" Height="30" FontSize="16" FontFamily="Arial"/>
        <TextBox Name="TxbCategoryID" HorizontalAlignment="Left" Margin="1016,439,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="202" Height="30" FontSize="16" FontFamily="Arial" Visibility="Hidden"/>
        <TextBox Name="TxbShopID" HorizontalAlignment="Left" Margin="1016,481,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="210" Height="30" FontSize="16" FontFamily="Arial" Visibility="Hidden"/>
        <Label Content="Добавить товар" HorizontalAlignment="Left" Margin="451,127,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Arial" FontWeight="Bold" Width="406"/>
        <Label Content="ItemName" HorizontalAlignment="Left" Margin="400,219,0,0" VerticalAlignment="Top"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="422,289,0,0" VerticalAlignment="Top"/>
        <Label Content="Discription" HorizontalAlignment="Left" Margin="398,363,0,0" VerticalAlignment="Top"/>
        <Label Content="CategoryID" HorizontalAlignment="Left" Margin="394,433,0,0" VerticalAlignment="Top"/>
        <Label Content="ShopID" HorizontalAlignment="Left" Margin="416,507,0,0" VerticalAlignment="Top"/>
        <Button Name="Back_Btn" Content="Назад" HorizontalAlignment="Left" Margin="38,30,0,0" VerticalAlignment="Top" Height="82" Width="142" Click="Back_Btn_Click"/>
        <ComboBox Name="Cmb_Category" HorizontalAlignment="Left" Margin="480,433,0,0" VerticalAlignment="Top" Width="404" SelectionChanged="Cmb_Category_SelectionChanged" Height="30" FontFamily="Arial" FontSize="16"/>
        <ComboBox Name="Cmb_Shop" HorizontalAlignment="Left" Margin="480,505,0,0" VerticalAlignment="Top" Width="404" SelectionChanged="Cmb_Shop_SelectionChanged" Height="30" FontFamily="Arial" FontSize="16"/>
        <Button Name="Btn_Testos" Content="Добавить товар" HorizontalAlignment="Left" Margin="562,563,0,0" VerticalAlignment="Top" Height="55" Width="242" Click="Btn_Testos_Click"/>
        <TextBlock Name="ID_Category" HorizontalAlignment="Left" Margin="1022,380,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="99" Visibility="Hidden"/>
        <TextBlock Name="ID_Shop" HorizontalAlignment="Left" Margin="1022,357,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="99" Visibility="Hidden" />
    </Grid>
</Page>
